<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <Button
        android:id="@+id/btnGrantOverlayPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Grant Overlay Permissions" />

    <Button
        android:id="@+id/btnGrantUsagePermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant Usage Permissions" />

    <Button
        android:id="@+id/btnGrantAccessibilityPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant Accessibility Permissions" />

</LinearLayout>
